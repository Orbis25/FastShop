@model Model.Models.Product

@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <h1>
        @Html.DisplayFor(model => model.ProductName)

    </h1>

<div>
    <h4>Detalle</h4>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <dl class="row mt-5">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CompanyName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CompanyName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Model)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Model)
                </dd>
                <dt class="col-sm-2">
                    Cantidad de Puntos
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Pounts)
                </dd>
                <dt class="col-sm-2">
                    Categoria
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
                <dt class="col-sm-2">
                    Fecha de creación
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
                <dt class="col-sm-2">
                    Fecha de modificación
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UpdatedAt)
                </dd>
                <dt class="col-sm-2">
                    Estado
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.State)
                </dd>
            </dl>
        </div>
        @if (Model.ProductPics.Count == 0)
        {
              <div>
                <i class="far fa-sad-cry text-center" style="font-size:100px;"></i>
                <h2 class="text-center">No hay imagenes</h2>
            </div>
        }
        <div class="col-sm-4">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        int i = 0;
                    }
                    @foreach (var item in Model.ProductPics)
                    {
                        string active = i++ == 0 ? "active" : string.Empty;
                        <div id="@item.PicName" class="carousel-item @active">
                            <img class="d-block w-100" height="400" id="@item.PicName" src="~/img/@item.PicName" alt="First slide">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

</div>
<div>
    <a asp-action="Products" asp-controller="Admin" class="btn btn-dark btn-block mt-5">Volver</a>

</div>
