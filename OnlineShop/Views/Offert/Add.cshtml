@model Model.Models.Offert

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Crear</h1>

<h4>Offerta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Concept" class="control-label">Concepto</label>
                <input asp-for="Concept" class="form-control" />
                <span asp-validation-for="Concept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descripcción</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label">Duracción</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-controller="Admin" asp-action="Offerts" class="btn btn-dark">Volver</a>
            </div>
        </form>
    </div>
</div>
<script src="~/js/sweetalert2.all.min.js" asp-append-version="true"></script>


@if (TempData["Offert"] != null)
{
    <script>
        Swal.fire(
            '@TempData["Offert"]',
            '',
            'error'
        )
    </script>
}