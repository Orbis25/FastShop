@model string
@{
    Layout = null;
}

<link href="~/lib/limonte-sweetalert2/sweetalert2.css" rel="stylesheet" />
<script src="~/lib/limonte-sweetalert2/sweetalert2.js"></script>
<script>
        window.onload = () => {
                Swal.fire({
                    title: "Ingresa tu Nueva contraseña",
                    type:"info",
                    html: "<input type='password' id='password' />"
                }).then((val) => {
                    let pass = document.getElementById('password').value;
                    if (val) {
                        if (pass.length > 0) {
                            fetch(`/Home/Change/?code=${'@Model'}&&newpass=${pass}`).then((va) => {
                                return va.json();
                            }).then((res) => {
                                console.log(res)
                                if (res) {
                                    Swal.fire({
                                        title: "Contraseña cambiada",
                                        type: "success"
                                    }).then(() => {
                                        location.href = "/"
                                    });
                                } else {
                                    Swal.fire({
                                        title: "Este enlace solo funciona una sola vez",
                                        type: "error"
                                    }).then(() => {
                                        location.href = "/"
                                    });
                                }
                            }).catch((e) => console.log("erro" + e));
                        } else {
                                Swal.fire({
                                    title: "Ingrese una contraseña",
                                    type: "error"
                                }).then(() => {
                                    location.reload();
                                });
                        }
                    }
                }).catch((e) => console.log("erro => " + e ));
        };
</script>