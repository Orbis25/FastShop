<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Dashboard</title>
    <link rel="icon" href="~/img/favicon.ico" type="image/png">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/limonte-sweetalert2/sweetalert2.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin/style.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap4-toggle/bootstrap4-toggle.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/lib/viewerjs/viewer.min.css" rel="stylesheet" />
    <link href="~/lib/rateYo/jquery.rateyo.min.css" rel="stylesheet" />

    <!--Autocolmplete-->
    <link href="~/lib/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" asp-append-version="true" />

    <!--Quilljs-->
    <link href="~/lib/quilljs/quill.bubble.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/quilljs/quill.core.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/quilljs/quill.snow.css" rel="stylesheet" asp-append-version="true" />

</head>

<body id="page-top" class="admin-body">


    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="sidebar navbar-nav side-bar-admin  ">

            <li class="nav-item bg-primary-ct">
                <a class="nav-link animate__animated animate__fadeInLeft animate__faster" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <div class="row mb-1">
                        <div class="col-12 mt-1 text-center">
                            <img class="img-fluid" width="125" style="border-radius:125px !important;" id="profile-img" src="~/img/default.png" />
                            <p class="text-white" style="word-wrap: break-word"><b>@User.Identity.Name</b></p>
                        </div>
                    </div>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link animate__animated animate__fadeInLeft animate__faster" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Inicio</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link animate__animated animate__fadeInLeft  animate__faster" asp-controller="Admin" asp-action="Products">
                    <i class="fas fa-boxes"></i>
                    <span>Productos</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link  animate__animated animate__fadeInLeft animate__faster" asp-controller="Admin" asp-action="Users">
                    <i class="fas fa-users"></i>
                    <span>Usuarios</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link  animate__animated animate__fadeInLeft animate__faster" asp-controller="Email" asp-action="Index">
                    <i class="fas fa-mail-bulk"></i>
                    <span>Correos</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link animate__animated animate__fadeInLeft animate__faster" asp-controller="Admin" asp-action="Categories">
                    <i class="fas fa-th-large"></i>
                    <span>Categorias</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link animate__animated animate__fadeInLeft animate__faster" asp-controller="Admin" asp-action="Offerts">
                    <i class="fas fa-laugh-beam"></i>
                    <span>Ofertas</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link animate__animated animate__fadeInLeft animate__faster" asp-controller="Admin" asp-action="Cupons">
                    <i class="fas fa-credit-card"></i>
                    <span>Cupones</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link animate__animated animate__fadeInLeft animate__faster" asp-controller="Admin" asp-action="Sales">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Ventas</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link animate__animated animate__fadeInLeft animate__faster" asp-controller="Configuration" asp-action="Index">
                    <i class="fas fa-cog"></i>
                    <span>Configuración</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link animate__animated animate__fadeInLeft animate__faster" asp-action="Index" asp-controller="Home">
                    <i class="fa fa-fire"></i>
                    <span>Sitio web</span>
                </a>
            </li>
        </ul>

        <div id="content-wrapper">

            <div class="container-fluid">
                <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
                <script src="~/lib/viewerjs/viewer.min.js" asp-append-version="true"></script>
                <script src="~/lib/limonte-sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>
                <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
                <script src="~/lib/bootstrap4-toggle/bootstrap4-toggle.min.js" asp-append-version="true"></script>
                <script asp-append-version="true" src="~/js/Base/genericSweetAlert.js"></script>
                <script src="~/lib/axios/axios.min.js" asp-append-version="true"></script>
                <script src="~/lib/printThis/printThis.min.js"></script>
                <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js" asp-append-version="true"></script>
                <script src="~/lib/bootstrap-datepicker/locales/bootstrap-datepicker.es.min.js" asp-append-version="true"></script>

                <!--Autocomplete-->
                <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js" asp-append-version="true"></script>
                <script src="~/lib/bootstrap-select/js/i18n/defaults-es_ES.js" asp-append-version="true"></script>
                <script src="~/lib/select2/js/select2.min.js" asp-append-version="true"></script>
                <script src="~/lib/select2/js/i18n/es.min.js" asp-append-version="true"></script>

                <!--Quilljs-->
                <script src="~/lib/quilljs/quill.core.js" asp-append-version="true"></script>
                <script src="~/lib/quilljs/quill.min.js" asp-append-version="true"></script>
                <script src="~/lib/rateYo/jquery.rateyo.min.js" asp-append-version="true"></script>

                <script src="~/js/Base/helpers.js" asp-append-version="true"></script>
                <script src="~/js/admin/index.js" asp-append-version="true"></script>
                @RenderBody()

            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © FastShop @DateTime.Now.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

</body>

</html>
