@model PaginationResult<Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12 mb-2">

        <h3>Categorias</h3>

        <a asp-action="Create" asp-controller="Category">
            Nuevo
        </a>

        <i>@Model.Total Categorias</i>
        <hr />
    </div>
    <div class="col-12 mb-2">
        <form asp-action="Categories" method="get">
            <div class="row justify-content-end">
                <div class="col-12 col-sm-3 col-md-4 mb-2">
                    <input name="name" class="form-control form-control-sm" placeholder="buscar..." value="@ViewBag.name" />
                </div>
                <div class="col-12 col-sm-2 col-md-2">
                    <button class="btn btn-primary btn-block btn-sm"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-12">

        <div class="card mb-3">
  
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-sm animate__animated animate__fadeInLeft" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Creacion</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Results)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.CreatedAtSrt</td>
                                    <td>
                                        <i class="fas fa-pencil-alt text-primary m-2 " onclick="edit('@item.Id')" style="cursor:pointer;"></i>
                                        <i class="fas fa-trash text-danger" onclick="sweetRemove('/category/remove/@item.Id')" style="cursor:pointer;"></i>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        @Html.RenderPagination(Model.Total, Model.Qyt, new DefaultPaginationConfig
   {
       LinkClass = "page-link",
       DoNotRenderForOnePage = true
   })
    </div>
</div>

<script src="~/js/category/app.js" asp-append-version="true"></script>
<partial name="_NotificationPartial" />
