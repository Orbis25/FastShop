@model IEnumerable<Model.Models.Cupon>
@{
    ViewData["Title"] = "Cupons";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Cupones</h1>


<div class="card mb-3">
    <div class="card-header">
        <a asp-action="Add" asp-controller="Cuppon" class="btn btn-primary ml-3 btn-sm">
            <i class="fas fa-plus-circle"></i>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Codigo</th>
                        <th>Monto</th>
                        <th>Descripción</th>
                        <th>Estado</th>
                        <th>Acciones</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var state = item.StateOfCuppon == 0 ? "Activo" : "Inactivo";
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.Amount</td>
                            <td>@item.Concept</td>
                            <td>
                                @state
                            </td>
                            <td>
                                <a asp-action="Update" asp-controller="Cuppon" asp-route-Id="@item.Id">
                                    <i class="fas fa-pencil-alt text-primary m-2 " style="cursor:pointer;"></i>
                                </a>
                                <i class="fas fa-trash text-danger" onclick="sweetRemove('/Cuppon/remove/@item.Id')" style="cursor:pointer;"></i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="_NotificationPartial" />

