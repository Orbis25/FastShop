@model PaginationResult<ApplicationUser>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-12">

        <h1>Usuarios</h1>

        <div class="card mb-3">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Estado</th>
                                <th>Numero</th>
                                <th>Correo</th>
                                <th>Dirreción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Results)
                            {
                                if (item.UserName == User.Identity.Name)
                                {
                                    continue;
                                }
                                <tr>
                                    <td>@item.FullName</td>
                                    @{
                                        string state = item.LockoutEnabled == false ? "Activo" : "Inactivo";
                                    }
                                    <td>@state</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Email</td>
                                    <td>@item.Address</td>
                                    <td>
                                        @if (item.LockoutEnabled)
                                        {
                                            <a asp-controller="Account" asp-action="BlockOrUnlockAccount" asp-route-Id="@item.Id">
                                                <b class="text-success">Desbloquear</b>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Account" asp-action="BlockOrUnlockAccount" asp-route-Id="@item.Id">
                                                <b class="text-danger">Bloquear</b>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        @Html.RenderPagination(Model.Total, Model.Qyt, new DefaultPaginationConfig
      {
          LinkClass = "page-link",
          DoNotRenderForOnePage = true
      })
    </div>
</div>

<partial name="_NotificationPartial" />
