@page
@model RegisterModel

<section class="login_box_area section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <div class="hover">
                        <h4>¿Tienes una cuenta?</h4>
                        <p>Que esperas entra ya!</p>
                        <a class="button button-account" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner register_form_inner">
                    <h3>Crear cuenta</h3>
                    <form asp-route-returnUrl="@Model.ReturnUrl" class="row login_form" id="register_form" method="post">
                        <div class="col-md-12 form-group">
                            <label>Nombre completo</label>
                            <input type="text" class="form-control" id="email" asp-for="Input.FullName" placeholder="ej:Orbis Alonzo..." onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nombre completo'">
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label class="col-form-label">Numero telefonico</label>
                            <input type="tel"
                                   class="form-control phone-number"
                                   asp-for="Input.PhoneNumber"
                                   placeholder="ej:(809369....)">
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span><br />
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Dirreción</label>
                            <textarea class="form-control" id="email" asp-for="Input.Address" placeholder="ej:street #14..."></textarea>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Correo</label>
                            <input type="text" class="form-control" id="email" asp-for="Input.Email" placeholder="ej:orbisalonzo@@....">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Contraseña</label>
                            <input class="form-control" asp-for="Input.Password">
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Repita la Contraseña</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <div asp-validation-summary="All" class="text-center text-danger"></div>

                        </div>

                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="button button-register w-100">Registrarme</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_ValidationScriptsPartial" />

